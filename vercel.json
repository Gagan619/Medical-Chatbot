{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/app.py"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "TRANSFORMERS_CACHE": "/tmp/transformers_cache"
  },
  "functions": {
    "app.py": {
      "maxDuration": 30
    }
  }
} 